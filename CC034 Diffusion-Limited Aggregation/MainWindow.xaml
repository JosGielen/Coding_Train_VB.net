<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DendriticGrowth"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450" Loaded="Window_Loaded" Closing="Window_Closing" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" Name="canvas1">
            <Image Grid.Row="0" Name="image1"></Image>
        </Canvas>
        <Button Grid.Row="1" Margin="10" Width="60" Name="BtnStart" Click="BtnStart_Click">START</Button>
    </Grid>
</Window>
