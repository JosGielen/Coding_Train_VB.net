<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_7SegmentDisplay"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="560" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged" Closing="Window_Closing" LocationChanged="Window_LocationChanged">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" Name="Canvas1"></Canvas>
        <Button Grid.Row="1" Margin="8" Width="100" Height="28" Name="BtnStart" Click="BtnStart_Click">START</Button>
    </Grid>
</Window>
