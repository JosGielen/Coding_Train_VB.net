        <Label Margin="28,42,0,0" Name="Label2" HorizontalAlignment="Left" Width="85" Height="23" VerticalAlignment="Top">Y-Coordinate :</Label>
        <TextBox HorizontalAlignment="Left" Margin="119,42,0,0" Name="TxtY" Width="40" Height="23" VerticalAlignment="Top" TabIndex="1" />
    </Grid>
</Window>
