<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecursiveTree"
        mc:Ignorable="d"
        Title="Recursive Tree" Height="700" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" Name="canvas1" Background="black"></Canvas>
        <StackPanel Grid.Row="1" Orientation="Horizontal" >
            <Label Margin="10,10,0,10">Angle:</Label>
            <Slider Margin="3,10,10,10" Name="SldAngle" Width="120" Minimum="0" Maximum="90" Value="30" TickFrequency="10" TickPlacement="BottomRight" ValueChanged="SldAngle_ValueChanged"></Slider>
            <Button Margin="80,10,10,10" Width="80" FontSize="14" FontWeight="Bold" Name="BtnStart" Click="BtnStart_Click">START</Button>
        </StackPanel>
    </Grid>
</Window>
